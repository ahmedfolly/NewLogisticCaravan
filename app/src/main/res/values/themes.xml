<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogisticCavan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="colorPrimary">#B8E55763</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name="CustomShapeAppearance" parent="">
        <item name="cornerSize">16dp</item> <!-- Change this value to adjust the radius -->
    </style>
    <style name="CustomeItemTextAppearance">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomBottomNavIndicator</item>
        <item name="itemIconTint">@color/primary_color</item>
        <item name="itemTextAppearance">@style/CustomeItemTextAppearance</item>

    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
    <!-- Custom style for the active indicator -->
    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#33E55763</item> <!-- Set the color of the active indicator -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.CustomActiveIndicator</item>
    </style>

    <!-- Custom shape appearance for the active indicator -->
    <style name="ShapeAppearance.CustomActiveIndicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Make it a circle or adjust as needed -->
    </style>
    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_style</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.LogisticCavan" parent="Base.Theme.LogisticCavan" />
</resources>